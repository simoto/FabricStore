@model FabricStore.Web.Models.ProductHomeViewModel

<div class="col-sm-5 col-md-3">
    <div class="thumbnail">
        <img src="@Model.Image" alt="...">
        <div class="caption">
            <h3>@Model.Name</h3>
            <p>...</p>
            <p>
                <a href="@Url.Action("Details", "Products", new { Model.Id })" class="btn btn-primary" role="button">View</a>
                <button class="btn btn-primary" type="button">
                    Price: <span class="badge">$@Model.Price</span>
                </button>
            </p>
        </div>
    </div>
</div>