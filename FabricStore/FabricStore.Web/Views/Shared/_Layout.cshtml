<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Fabric Store</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/jquery")
    @if (this.ViewBag.Title == "All Products")
    {
        @Styles.Render("~/Content/kendo/css")
    }      
</head>
<body>
    <header class="container">
        <div class="pull-left">
            <h1>Fabric Store System</h1>
            <p class="lead">Best prices and wide variety of fabrics</p>
        </div>
        <div class="pull-right">
            <form class="form-inline" role="search">
                <div class="form-group">
                    <input type="text" class="form-control" placeholder="Search">
                </div>
                <button type="submit" class="btn btn-default">Submit</button>
            </form>
        </div>
        <div class="clearfix"></div>          
        <nav class="navbar navbar-default">
            <div class="container-fluid">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                </div>
                <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                    <ul class="nav navbar-nav">
                        <li>@Html.ActionLink("Home", "Index", "Home", new { area = "" }, null)</li>
                        <li>@Html.ActionLink("Products", "List", "Products", new { area = "" }, null)</li>
                        <li>@Html.ActionLink("About", "About", "Home", new { area = "" }, null)</li>
                        <li>@Html.ActionLink("Contact", "Contact", "Home", new { area = "" }, null)</li>
                    @if (User.Identity.IsAuthenticated)
                    {
                        <li class="dropdown">
                            <a aria-expanded="false" href="#" class="dropdown-toggle" data-toggle="dropdown">Users<b class="caret"></b></a>
                            <ul class="dropdown-menu">
                                <li>@Html.ActionLink("All Products", "All", "Products", new { area = "Users" }, null)</li>
                            </ul>
                        </li>
                    }
                    @if (User.IsInRole("Admin"))
                    {
                        <li class="dropdown">
                            <a aria-expanded="false" href="#" class="dropdown-toggle" data-toggle="dropdown">Admin <b class="caret"></b></a>
                            <ul class="dropdown-menu">
                                <li>@Html.ActionLink("Products", "Index", "Products", new { area = "Administration" }, null)</li>
                                <li>@Html.ActionLink("Categories", "Index", "Categories", new { area = "Administration" }, null)</li>
                                <li>@Html.ActionLink("Comments", "Index", "Comments", new { area = "Administration" }, null)</li>
                            </ul>
                       </li>
                    }
                    </ul>
                    @Html.Partial("_LoginPartial")
                </div>
            </div>
        </nav>
    </header>
    <section class="container">
        @*<ol class="breadcrumb">
                <li>@Html.ActionLink("Home", "Index", "Home")</li>
                <li>@Html.ActionLink("Products", "List", "Products")</li>
                <li class="active">Data</li>
            </ol>*@
        @RenderBody()        
    </section>
    <footer class="container">
        <p class="text-center">&copy; @DateTime.Now.Year - SboySoft</p>
    </footer>
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("KendoGrid", required: false)
    @RenderSection("Scripts", required: false)
    @RenderSection("AjaxComment", required: false)
</body>
</html>
