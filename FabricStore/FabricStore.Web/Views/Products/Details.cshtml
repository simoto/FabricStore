@model FabricStore.Web.Models.ProductDetailsViewModel

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <div class="col-md-3">

    </div>
    <div class="col-md-9">
        <div class="row">
            <div class="col-md-6">
                <h1>@Model.Name</h1>
                </div>
            </div>
            <div class="row">
                <div class="col-md-5">
                    <img src="@Url.Action("GetImage", "Products", new { id = Model.Id })" alt="@Model.Name" class="img-responsive img-thumbnail" />
                </div>
                <div class="col-md-6">
                    <address>
                        <strong>Manufacturer:</strong> <span>@Model.Manufacturer.Name</span><br>
                        <strong>Category:</strong> <span>@Model.Category.Name</span><br>
                    </address>
                </div>
                <div class="col-md-6">
                    <h2>
                        <strong>Price: $@Model.Price /kg</strong><br><br>
                    </h2>
                    <div class="row">
                        <div class="col-md-9">
                            <div class="tabbable">
                                <ul class="nav nav-tabs">
                                    <li class="active"><a href="#1" data-toggle="tab">Description</a></li>
                                </ul>
                                <div class="tab-content">
                                    <div class="tab-pane active" id="1">
                                        <p>
                                            @Model.Description
                                        </p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            
        </div>
    </div>
