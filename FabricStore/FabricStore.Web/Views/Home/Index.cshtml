@model IEnumerable<FabricStore.Web.Models.ProductHomeViewModel>
@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>Fabric Store System</h1>
    <p class="lead">Best prices and wide variety of fabrics</p>
    @*<p><a href="http://asp.net" class="btn btn-primary btn-lg">Learn more &raquo;</a></p>*@
</div>
<div class="row">
    <h2>New products</h2>
    <div class="row">
        @for (int i = 0; i < Model.Count(); i++)
        {
            var product = Model.ElementAt(i);
            @Html.Partial("_ProductPartial", product)
        }
    </div>
</div>